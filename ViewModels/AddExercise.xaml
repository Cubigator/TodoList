<Window x:Class="TodoList.ViewModels.AddExercise"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TodoList.ViewModels"
        mc:Ignorable="d"
        Title="AddExercise" Height="500" Width="300">
    <Grid>
        <StackPanel>
            <Label FontSize="18">Введите заголовок:</Label>
            <TextBox FontSize="15"></TextBox>
            <Label  FontSize="18">Введите основной текст:</Label>
            <TextBox FontSize="15" Height="300" TextWrapping="Wrap"></TextBox>
            <Button  FontSize="18">Добавить</Button>
        </StackPanel>
    </Grid>
</Window>
